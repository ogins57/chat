#encoding:utf-8
<h2>chat</h2>

<ul>
  <% @tweets.each do |tweet| %>
  <li><%= tweet.tweet %>（by <%= tweet.user %>） </li>
  <% end %>
</ul>

<h2>tweet</h2>
<%= form_for(@tweet) do |f| %>

<div class="field">
  <%= f.label :user %>
  <%= f.text_field :user %>
</div>

<div class="field">
  <%= f.label :tweet %>
  <%= f.text_area :tweet, :rows =>5 %>
</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>
